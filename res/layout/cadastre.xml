<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvCodigo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/codigo" />

    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tvCodigo"
        android:enabled="false"
        android:hint="@string/codigo"
        android:inputType="numberDecimal" />
    
    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/etCodigo"
        android:text="@string/descricao" />

    <EditText
        android:id="@+id/etDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tvDescricao"
        android:layout_toRightOf="@dimen/activity_horizontal_margin"
        android:hint="@string/descricao"
        android:inputType="text" >
        <requestFocus />
    </EditText>
    
    <ListView
        android:id="@+id/listaConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:divider="#FFECECEC"
        android:dividerHeight="2sp"
        android:scrollbars="vertical"
        android:layout_below="@id/etDescricao" >
        
    </ListView>
        
</RelativeLayout>
